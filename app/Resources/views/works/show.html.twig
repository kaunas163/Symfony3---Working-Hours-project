{% extends 'base.html.twig' %}

{% block body %}
    <h1>Works</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if work.date %}{{ work.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{% if work.startTime %}{{ work.startTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{% if work.endTime %}{{ work.endTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ work.comment }}</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>{{ work.project }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('works_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('works_edit', { 'id': work.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
