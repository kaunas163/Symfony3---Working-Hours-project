{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projects</h1>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            {% if is_granted('ROLE_USER') and project.user == app.user %}
                <tr>
                    <td><a href="{{ path('projects_show', { 'id': project.id }) }}">{{ project.title }}</a></td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.category }}</td>
                    <td>
                        <a href="{{ path('projects_show', { 'id': project.id }) }}" class="btn btn-primary">View</a>
                        <a href="{{ path('projects_edit', { 'id': project.id }) }}" class="btn btn-default">Edit</a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('projects_new') }}" class="btn btn-success">New project</a>
    
{% endblock %}
