{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projects</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ project.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('projects_index') }}" class="btn btn-primary">Back</a>
    <a href="{{ path('projects_edit', { 'id': project.id }) }}" class="btn btn-default">Edit</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
    
{% endblock %}
