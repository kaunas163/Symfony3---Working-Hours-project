{% extends 'base.html.twig' %}

{% block body %}
    <h1>Works</h1>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                <th>Comment</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td><a href="{{ path('works_show', { 'id': work.id }) }}">{{ work.date|date('Y-m-d') }}</a></td>
                <td>{% if work.startTime %}{{ work.startTime|date('H:i') }}{% endif %}</td>
                <td>{% if work.endTime %}{{ work.endTime|date('H:i') }}{% endif %}</td>
                <td>{{ work.comment }}</td>
                <td>{{ work.project }}</td>
                <td>
                    <a href="{{ path('works_show', { 'id': work.id }) }}" class="btn btn-primary">View</a>
                    <a href="{{ path('works_edit', { 'id': work.id }) }}" class="btn btn-default">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('works_new') }}" class="btn btn-success">New work</a>    
    
{% endblock %}
