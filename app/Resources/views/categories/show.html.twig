{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('categories_index') }}" class="btn btn-primary">Back</a>
    <a href="{{ path('categories_edit', { 'id': category.id }) }}" class="btn btn-default">Edit</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}
