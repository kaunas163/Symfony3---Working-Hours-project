{% extends 'base.html.twig' %}

{% block body %}

	<h1>Kategorijos <a href="/category/create" class="btn btn-success">Sukurti naują</a></h1>
    
	<table class="table table-striped table-hover ">
		<thead>
			<tr>
				<th>Pavadinimas</th>
				<th>Aprašymas</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
            {% for category in categories %}
			<tr>
				<td>{{ category.title }}</td>
				<td>{{ category.description }}</td>
				<td>
					<a href="/category/edit/{{category.id}}" class="btn btn-default">Redaguoti</a>
					<a href="/category/delete/{{category.id}}" class="btn btn-danger">Šalinti</a>
				</td>
			</tr>
            {% endfor %}
		</tbody>
	</table> 

{% endblock %}