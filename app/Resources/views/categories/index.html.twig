{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': category.id }) }}">{{ category.title }}</a></td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('categories_show', { 'id': category.id }) }}" class="btn btn-primary">View</a>
                    <a href="{{ path('categories_edit', { 'id': category.id }) }}" class="btn btn-default">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('categories_new') }}" class="btn btn-success">New category</a>
{% endblock %}
